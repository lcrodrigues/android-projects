<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="5dp">


    <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp" app:srcCompat="@drawable/imagem4" android:layout_row="0"
            android:id="@+id/imageView" android:layout_column="0" android:scaleType="centerCrop"
            android:layout_margin="2dp"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp" app:srcCompat="@drawable/imagem2" android:layout_row="0"
            android:id="@+id/imageView2" android:layout_column="1" android:scaleType="centerCrop"
            android:layout_margin="2dp"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp" app:srcCompat="@drawable/imagem3" android:layout_row="0"
            android:id="@+id/imageView3" android:layout_column="2" android:scaleType="centerCrop"
            android:layout_margin="2dp"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp" app:srcCompat="@drawable/imagem1" android:layout_row="1"
            android:id="@+id/imageView4" android:layout_column="1" android:layout_margin="2dp"
            android:scaleType="centerCrop"/>
</GridLayout>