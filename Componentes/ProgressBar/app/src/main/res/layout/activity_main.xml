<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalPBLoading"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbLoading" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalPBLoading" app:layout_constraintEnd_toEndOf="@+id/horizontalPBLoading"
            app:layout_constraintStart_toStartOf="@+id/horizontalPBLoading"/>
    <Button
            android:text="Carregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="@+id/pbLoading"
            app:layout_constraintStart_toStartOf="@+id/pbLoading" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/pbLoading"/>
</androidx.constraintlayout.widget.ConstraintLayout>